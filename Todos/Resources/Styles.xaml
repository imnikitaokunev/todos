<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ToDo: I'm not sure about this approach. From my point of view, it just decouples controls customization from their use, as in html/css.  -->

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="8,0,8,0" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Width" Value="80" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

    <Style x:Key="LargeTextBox" TargetType="TextBox">
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="TodosList" TargetType="ListView">
        <Setter Property="Border.BorderThickness" Value="0, 0, 1, 0" />
        <Setter Property="Border.BorderBrush" Value="#e6e6e6" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style x:Key="FormBorder" TargetType="Border">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="#e6e6e6" />
    </Style>

    <Style x:Key="FormBackground" TargetType="Grid">
        <Setter Property="Background" Value="#f6f6f6" />
    </Style>

</ResourceDictionary>